<KASP>

	<Policy name="default">
		<Description>A default policy that will amaze you and your friends</Description>
		<Signatures>
			<Resign>PT60S</Resign>
			<Refresh>PT120S</Refresh>
			<Validity>
					<Default>PT24H</Default>
					<Denial>P14D</Denial>
			</Validity>
			<Jitter>PT60S</Jitter>
			<InceptionOffset>-PT300S</InceptionOffset>
		</Signatures>

		<Denial>
			<NSEC3>
				<OptOut/>
				<Resalt>P100D</Resalt>
				<Hash>
					<Algorithm>1</Algorithm>
					<Iterations>5</Iterations>
					<Salt length="4"/>
				</Hash>
			</NSEC3>
		</Denial>

		<Keys>
			<TTL>PT3600S</TTL>
			<RetireSafety>PT3600S</RetireSafety>
			<PublishSafety>PT0S</PublishSafety>
			<ShareKeys>true</ShareKeys>
			<!-- Parameters that are different for zsks and ksks -->
			<KSK>
				<Algorithm length="2048">5</Algorithm>
				<Lifetime>P1Y</Lifetime>
				<Repository>softHSM</Repository>
				<Standby>0</Standby>
				<RFC5011/>
			</KSK>

			<ZSK>
				<Algorithm length="1024">5</Algorithm>
				<Lifetime>P14D</Lifetime>
				<Repository>softHSM</Repository>
				<Standby>0</Standby>
			</ZSK>
		</Keys>

		<Zone>
			<PropagationDelay>PT0S</PropagationDelay>
			<SOA>
				<TTL>PT3600S</TTL>
				<Minimum>PT3600S</Minimum>
				<Serial>unixtime</Serial>
			</SOA>
		</Zone>

		<Parent>
			<PropagationDelay>PT0S</PropagationDelay>
			<DS>
				<TTL>PT0S</TTL>
			</DS>
			<SOA>
				<TTL>PT0S</TTL>
				<Minimum>PT0S</Minimum>
			</SOA>
		</Parent>
	</Policy>
	
</KASP>
